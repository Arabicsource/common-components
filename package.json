{
  "name": "quran-components",
  "version": "0.0.9",
  "description": "Quran.com collection of common UI components",
  "main": "index.js",
  "repository": "git@github.com:quran/common-components.git",
  "author": "Quran.com",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server",
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-core/register --require ./test_helper.js \"@(src|components)/**/test/*.test@(.js|.jsx)\"",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf ./lib",
    "build:components": "babel src/components --out-dir lib --copy-files --ignore test ",
    "build": "cross-env NODE_ENV=production webpack -p --colors --progress",
    "deploy:gp": "npm run build && gh-pages -d ./build",
    "deploy:npm": "npm run clean && npm run build:components && npm publish ./"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "config": {
    "cssModulePattern": "quran-[name]__[local]"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-plugin-transform-require-ignore": "^0.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.13.0",
    "babel-runtime": "^6.22.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.15",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.4",
    "css-loader": "0.23.1",
    "css-modules-require-hook": "^4.0.5",
    "debug": "^2.6.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-mocha": "^4.8.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-import": "2.2.0",
    "expose-loader": "^0.7.1",
    "extract-text-webpack-plugin": "2.0.0-beta.5",
    "gh-pages": "^0.12.0",
    "imports-loader": "^0.7.0",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^9.9.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.3.0",
    "postcss-loader": "0.9.1",
    "pre-commit": "^1.2.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "react-router": "^3.0.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0",
    "webpack-merge": "^2.4.0",
    "write-file-webpack-plugin": "^3.4.2",
    "eslint-config-airbnb": "^14.1.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
